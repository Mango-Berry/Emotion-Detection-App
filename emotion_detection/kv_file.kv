<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'moodsense.png'
            size_hint: 0.75, 0.75
            pos_hint: {'center_x': .5}
        Label:
            color: 0, 0, 0, 1
            text: 'Detect emotions and facial expressions in real-time with machine learning'
            size_hint_y: None
            pos_hint: {'center_x':.5, 'center_y':.5}
            halign: 'center'
            font_size: 25
            text_size: self.size
            height: '100dp'
            font_name: 'Lucida'
        Button:
            text: 'Login'
            background_normal: 'button.png'
            on_press: root.manager.current = 'login'
            size_hint_y: None
            height: '48dp'
            width: '100dp'
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y':.7}
        Button:
            text: 'Signup'
            background_normal: 'button.png'
            on_press: root.manager.current = 'signup'
            pos_hint: {'center_x':.5, 'center_y': .8}
            size_hint_y: None
            font_size: 20
            height: '48dp'
            width: '100dp'

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.1
        Label:
            text: 'Login with your profile information to access Moodsense'
            color: 0, 0, 0, 1
            font_size: 25
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        TextInput:
            id: input_user
            hint_text:'Enter username'
            multiline: False
            font_size: 20
            size_hint: 0.5, 0.05
            pos_hint: {'center_x':.5, 'center_y':.6}
        TextInput:
            id: input_pass
            hint_text:'Enter password'
            multiline: False
            password: True
            size_hint: 0.5, 0.05
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y':.7}
        Label:
            size_hint: 1, 0.05
        Button:
            text: 'Enter'
            background_normal: 'button.png'
            on_press: root.manager.current = 'home'
            font_name: 'Lucida'
            font_size: 20
            size_hint: 0.5, 0.05
            pos_hint: {'center_x':.5, 'center_y':.8}
        Button:
            text: 'Back'
            on_press: root.manager.current = 'menu'
            background_normal: 'button.png'
            size_hint: 0.5, 0.05
            font_size: 20
            font_name: 'Lucida'
            pos_hint: {'center_x':.5, 'center_y':.9}

