<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'moodsense.png'
            size_hint: 0.6, 0.3
            pos_hint: {'center_x':.5, 'center_y':.25}
        Button:
            text: 'Camera'
            background_normal: 'button.png'
            on_press: root.manager.current = 'camera_page'
            size_hint: 0.5, 0.05
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y':.7}
            font_name: 'Lucida'
        Button:
            text: 'Gallery'
            background_normal: 'button.png'
            on_press: root.manager.current = 'gallery'
            pos_hint: {'center_x':.5, 'center_y': .8}
            size_hint: 0.5, 0.05
            font_size: 20
            font_name: 'Lucida'
        Button:
            text: 'Mood Log'
            background_normal: 'button.png'
            on_press: root.manager.current = 'log'
            pos_hint: {'center_x':.5, 'center_y': 1}
            size_hint: 0.5, 0.05
            font_size: 20
            font_name: 'Lucida'
        Button:
            text: 'Logout'
            background_normal: 'button.png'
            on_press: root.manager.current = 'menu'
            font_size: 20
            size_hint: 0.5, 0.05
            pos_hint: {'center_x':.5, 'center_y':.9}

<CameraScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: mood_label
            text: 'Mood Detected: '
            color: 0, 0, 0, 1
            size_hint_y: None
            halign: 'center'
            font_size: 25
            text_size: self.size
            font_name: 'Lucida'
        Camera:
            id: camera
            play: True
        Label:
            size_hint: 1, 0.05
        GridLayout:
            cols: 1
            rows: 2
            Button:
                text: 'Capture + Detect Mood'
                on_press: root.detect_mood()
                background_normal: 'button.png'
                size_hint_y: None
                font_size: 20
            Button:
                text: 'Back'
                on_press: root.manager.current = 'home'
                background_normal: 'button.png'
                size_hint_y: None
                font_size: 20
                font_name: 'Lucida'

